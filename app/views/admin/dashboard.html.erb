<div class="container d-flex flex-column align-items-center justify-content-center min-vh-100">
  <h1 class="mb-4 text-center">Painel Administrativo</h1>

  <div class="card shadow p-4 w-100" style="max-width: 600px;">
    <h2 class="text-center mb-3">Gerenciamento</h2>

    <div class="list-group">
      <a href="<%= admin_users_path %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
        Gerenciar Usuários
        <span class="badge bg-primary rounded-pill"><%= @usuarios.count %></span>
      </a>

      <a href="<%= admin_unidades_path %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
        Gerenciar Unidades
        <span class="badge bg-primary rounded-pill"><%= @unidades.count %></span>
      </a>

      <a href="<%= admin_setores_path %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
        Gerenciar Setores
        <span class="badge bg-primary rounded-pill"><%= @setores.count %></span>
      </a>

      <a href="<%= admin_funcionarios_path %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
        Gerenciar Funcionários
        <span class="badge bg-primary rounded-pill"><%= @funcionarios.count %></span>
      </a>
    </div>

    <div class="mt-4 text-center">
      <%= button_to "Sair", destroy_user_session_path, method: :delete, data: { turbo: false }, class: "btn btn-danger w-100" %>
    </div>
  </div>
</div>






