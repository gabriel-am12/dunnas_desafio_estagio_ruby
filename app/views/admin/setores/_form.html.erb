<%= form_with model: @setor, url: @setor.new_record? ? admin_setores_path : admin_setore_path(@setor), local: true, method: @setor.new_record? ? :post : :patch do |form| %>
  <div class="mb-3">
    <%= form.label :nome, "Nome", class: "form-label" %>
    <%= form.text_field :nome, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :unidade_id, "Unidade", class: "form-label" %>
    <%= form.collection_select :unidade_id, Unidade.all, :id, :nome, { prompt: "Selecione a unidade" }, class: "form-select" %>
  </div>

  <div class="mt-3">
    <%= form.submit "Salvar", class: "btn btn-primary" %>
  </div>
<% end %>
