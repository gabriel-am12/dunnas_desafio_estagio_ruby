<h1 class="mb-4">Gerenciar Setores</h1>

<%= link_to "Novo Setor", new_admin_setore_path, class: "btn btn-success mb-3" %>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Nome</th>
      <th>Unidade</th>
      <th>Funcionários</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @setores.each do |setor| %>
      <tr>
        <td><%= setor.nome %></td>
        <td><%= setor.unidade.nome %></td>
        <td>
          <% if setor.funcionarios.any? %>
            <ul>
              <% setor.funcionarios.each do |funcionario| %>
                <li><%= funcionario.nome %></li>
              <% end %>
            </ul>
          <% else %>
            <span class="text-muted">Sem funcionários cadastrados</span>
          <% end %>
        </td>
        <td>
          <%= link_to "Editar", edit_admin_setore_path(setor), class: "btn btn-warning btn-sm" %>
          <%= button_to "Excluir", admin_setore_path(setor), method: :delete, data: { confirm: "Tem certeza?" }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Voltar para o Dashboard", admin_dashboard_path, class: "btn btn-secondary" %>

