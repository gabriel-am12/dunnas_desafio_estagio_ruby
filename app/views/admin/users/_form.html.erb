<%= form_with model: @usuario, url: @usuario.new_record? ? admin_users_path : admin_user_path(@usuario), local: true, method: @usuario.new_record? ? :post : :patch do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.label :password_confirmation, "Confirme sua senha" %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div>
    <%= form.label :role, "Tipo de Usuário" %>
    <%= form.select :role, User.roles.keys.map { |role| [role.humanize, role] }, prompt: "Selecione um tipo de usuário" %>
  </div>

  <div>
    <%= form.submit "Salvar", class: "btn btn-primary" %>
  </div>
<% end %>
