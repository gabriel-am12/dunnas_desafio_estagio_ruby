<h2>Cadastro</h2>

<% if resource.errors.any? %>
  <div style="color: red;">
    <h3><%= pluralize(resource.errors.count, "erro") %> encontrado(s):</h3>
    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: resource, url: registration_path(resource_name), local: true do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email, autofocus: true %>
  </div>

  <div>
    <%= form.label :password, "Senha" %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.label :password_confirmation, "Confirme sua senha" %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div>
    <%= form.label :role, "Tipo de Usuário" %>
    <%= form.select :role, User.roles.keys.map { |role| [role.humanize, role] }, prompt: "Selecione um tipo de usuário" %>
  </div>

  <div>
    <%= form.submit "Cadastrar" %>
  </div>
<% end %>

<p>Já tem uma conta? <%= link_to "Entrar", new_user_session_path %></p>



