<h2>Cadastro</h2>

<% if resource.errors.any? %>
  <div style="color: red;">
    <h3><%= pluralize(resource.errors.count, "erro") %> encontrado(s):</h3>
    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: resource, url: registration_path(resource_name), local: true do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email, autofocus: true %>
  </div>

  <div>
    <%= form.label :password, "Senha" %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.label :password_confirmation, "Confirme sua senha" %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div>
    <%= form.label :role, "Tipo de Usuário" %>
    <%= form.select :role, User.roles.keys.map { |role| [role.humanize, role] }, { prompt: "Selecione um tipo de usuário" }, { id: "role_select" } %>
  </div>

  <div id="unidade_select" style="display: none;">
    <%= form.label :unidade_id, "Unidade (Opcional)" %>
    <%= form.collection_select :unidade_id, Unidade.all, :id, :nome, include_blank: "Nenhuma" %>
  </div>

  <div>
    <%= form.submit "Cadastrar" %>
  </div>
<% end %>

<p>Já tem uma conta? <%= link_to "Entrar", new_user_session_path %></p>

<script>
  document.addEventListener("turbo:load", function() { 
      let roleSelect = document.querySelector("#role_select");
      let unidadeSelectDiv = document.querySelector("#unidade_select");

      if (!roleSelect || !unidadeSelectDiv) {
          console.warn("Elementos não encontrados, abortando script.");
          return;
      }

      function toggleUnidadeSelect() {
          if (roleSelect.value === "atendente") {
              unidadeSelectDiv.style.display = "block";
          } else {
              unidadeSelectDiv.style.display = "none";
          }
      }

      toggleUnidadeSelect();

      roleSelect.addEventListener("change", toggleUnidadeSelect);
  });
</script>

