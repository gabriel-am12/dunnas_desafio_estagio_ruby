<div class="container d-flex flex-column justify-content-center align-items-center min-vh-100">
  <h1 class="mb-4 text-center fw-bold">Sistema de Controle de Entrada</h1>
  
  <div class="card p-4 shadow" style="width: 350px;">
    <h2 class="text-center">Login</h2>

    <%= form_with model: resource, url: session_path(resource_name), local: true, class: "mt-3" do |form| %>
      <div class="mb-3">
        <%= form.label :email, class: "form-label" %>
        <%= form.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :password, "Senha", class: "form-label" %>
        <%= form.password_field :password, class: "form-control" %>
      </div>

      <div class="d-grid">
        <%= form.submit "Entrar", class: "btn btn-primary" %>
      </div>
    <% end %>

    <p class="mt-3 text-center">
      NÃ£o tem uma conta? <%= link_to "Cadastre-se", new_user_registration_path, class: "text-primary" %>
    </p>
  </div>
</div>

