<h2>Login</h2>

<%= form_with model: resource, url: session_path(resource_name), local: true do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email, autofocus: true %>
  </div>

  <div>
    <%= form.label :password, "Senha" %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit "Entrar" %>
  </div>
<% end %>

