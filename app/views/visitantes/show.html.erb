<h1 class="mb-4">Detalhes do Visitante</h1>

<div class="card">
  <div class="card-body">
    <p><strong>CPF:</strong> <%= @visitante.cpf %></p>
    <p><strong>Nome:</strong> <%= @visitante.nome %></p>
    <p><strong>RG:</strong> <%= @visitante.rg %></p>
    <p><strong>Telefone:</strong> <%= @visitante.telefone %></p>

    <% if @visitante.foto.present? %>
      <div class="mt-3">
        <strong>Foto:</strong><br>
        <%= image_tag @visitante.foto.url, class: "img-thumbnail", alt: "Foto do Visitante" %>
      </div>
    <% else %>
      <p class="text-muted">Sem foto cadastrada</p>
    <% end %>

    <div class="mt-4">
      <%= link_to "Editar", edit_visitante_path(@visitante), class: "btn btn-primary" %>
      <%= link_to "Voltar", visitantes_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
